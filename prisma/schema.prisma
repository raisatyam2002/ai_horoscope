generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User{
  id        Int @default(autoincrement()) @unique
  firstName     String
  lastName      String
  dateOfBirth    DateTime?
  timeOfBirth   DateTime
  gender        Gender
  placeOfBirth  String
  email         String
}
enum Gender{
  Male
  Female
}